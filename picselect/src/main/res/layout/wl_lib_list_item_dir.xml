<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wl_lib_ll"
    android:orientation="horizontal" >

  	<ImageView 
  	    android:id="@+id/wl_lib_iv_image"
  	    android:layout_width="80dp"
  	    android:layout_height="80dp"
  	    android:layout_margin="15dp"
  	    android:scaleType="centerCrop"
  	    android:src="@drawable/wl_lib_p_no_pic"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical" >

        <TextView
            android:id="@+id/wl_lib_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wl_lib_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:lineSpacingExtra="5dp"
            android:layout_below="@id/wl_lib_tv_name" />
    </RelativeLayout>

    <ImageView 
        android:id="@+id/wl_lib_iv_checked"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/wl_lib_p_selected"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>
</LinearLayout>
